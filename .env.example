# shellcheck disable=all

# =============================================================================
# BetterAuth (Authentication)
# =============================================================================
# BETTER_AUTH_URL=http://localhost:3000
# BETTER_AUTH_SECRET=

# =============================================================================
# Keycloak (Authentication)
# =============================================================================
# KEYCLOAK_URL=
# KEYCLOAK_REALM=
# KEYCLOAK_CLIENT_ID=
# KEYCLOAK_CLIENT_SECRET=

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
DATABASE_URL="postgresql://user:password@localhost:5432/buun_curator"
TEST_DATABASE_URL="postgresql://user:password@localhost:5432/buun_curator_test"

# =============================================================================
# OpenAI / LLM
# =============================================================================
OPENAI_API_KEY=sk-xxx
OPENAI_MODEL=gpt-4o
# OPENAI_BASE_URL=http://localhost:4000  # Optional: LiteLLM proxy or compatible endpoint

# =============================================================================
# Temporal (Workflow Engine)
# =============================================================================
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=buun-curator

# =============================================================================
# Meilisearch (Full-text Search)
# =============================================================================
MEILISEARCH_HOST=http://localhost:7700
MEILISEARCH_INDEX=buun-curator
# MEILISEARCH_API_KEY=  # Optional: API key for Meilisearch

# =============================================================================
# AI Agent (FastAPI)
# =============================================================================
AGENT_URL=http://localhost:8000

# =============================================================================
# Internal API
# =============================================================================
# INTERNAL_API_TOKEN=  # Optional: Token for internal API authentication

# =============================================================================
# Development Settings
# =============================================================================
ALLOWED_DEV_ORIGINS=http://localhost:3000
# ALLOWED_DEV_ORIGINS=http://buun-curator.example.com,http://localhost:3000

# =============================================================================
# Feature Flags
# =============================================================================
# NEXT_PUBLIC_REDDIT_ENABLED=true

# =============================================================================
# Langfuse (LLM Observability) - Optional
# =============================================================================
# LANGFUSE_HOST=https://cloud.langfuse.com
# LANGFUSE_PUBLIC_KEY=
# LANGFUSE_SECRET_KEY=

# =============================================================================
# OpenTelemetry Tracing - Optional
# =============================================================================
# OTEL_TRACING_ENABLED=false
# OTEL_EXPORTER_OTLP_ENDPOINT=http://tempo.monitoring:4317
# OTEL_SERVICE_NAME=buun-curator-frontend
